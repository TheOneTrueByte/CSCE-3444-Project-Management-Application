<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBoardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/create_board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/workbench"
            android:text="@string/create_board_title"
            android:textColor="@color/technic_blue"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.048" />

        <ImageView
            android:id="@+id/create_board_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:src="@drawable/blue_back_icon"
            app:layout_constraintBottom_toBottomOf="@+id/create_board_title"
            app:layout_constraintEnd_toStartOf="@+id/create_board_title"
            app:layout_constraintStart_toEndOf="@+id/create_board_left_bracket"
            app:layout_constraintTop_toTopOf="@+id/create_board_title" />

        <EditText
            android:id="@+id/create_board_entry"
            style="@style/login_entry_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/board_name"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_board_title"
            app:layout_constraintVertical_bias="0.3" />

        <ImageView
            android:id="@+id/create_board_board_name_uline"
            android:layout_width="273dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/text_entry_line"
            app:layout_constraintBottom_toBottomOf="@+id/create_board_entry"
            app:layout_constraintEnd_toEndOf="@+id/create_board_entry"
            app:layout_constraintStart_toStartOf="@+id/create_board_entry"
            app:layout_constraintTop_toTopOf="@+id/create_board_entry" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_board_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/techniclite"
            android:background="@drawable/blue_button_background"
            android:backgroundTint="@color/technic_blue"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp"
            android:text="@string/create_board"
            android:textAllCaps="false"
            android:foreground="?selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_board_entry"
            app:layout_constraintVertical_bias="0.100000024" />

        <ImageView
            android:id="@+id/create_board_left_bracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_bracket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/create_board_right_bracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_bracket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/create_board_breakline"
            android:layout_width="325dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/break_line"
            app:layout_constraintEnd_toStartOf="@+id/create_board_right_bracket"
            app:layout_constraintStart_toEndOf="@+id/create_board_left_bracket"
            app:layout_constraintTop_toBottomOf="@+id/create_board_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
